{
  "name": "plane-rotation-gl",
  "version": "0.0.1",
  "description": "Rotation of a plane with WebGL",
  "repository": {
    "type": "git",
    "url": "https://github.com/oscarlorentzon/plane-rotation-gl.git"
  },
  "browserify": {
    "transform": [
      "glify"
    ]
  },
  "dependencies": {
    "gl-matrix": "~2.3.1",
    "glify": "~0.5.0",
    "canvas-fit": "~1.4.0",
    "dat-gui": "~0.5.0"
  },
  "devDependencies": {
    "browserify": "latest"
  },
  "scripts": {
    "build:index": "browserify -d javascript/index.js > bin/index.min.js",
    "build:index2": "browserify -d javascript/index2.js > bin/index2.min.js",
    "build": "npm run build:index & npm run build:index2"
  }
}
